{
  "name": "claude-logger",
  "displayName": "Claude Logger",
  "description": "Logs prompts sent to Claude Code in VS Code terminals",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-logger.openClaudeTerminal",
        "title": "Open Claude Terminal"
      },
      {
        "command": "claude-logger.openLog",
        "title": "Open Claude Log"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/vscode": "^1.80.0",
    "tslint": "^6.1.3",
    "typescript": "^5.2.0"
  },
  "dependencies": {
    "node-pty": "^1.0.0"
  }
}
